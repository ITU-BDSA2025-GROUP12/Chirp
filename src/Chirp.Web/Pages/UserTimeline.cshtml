@page "/{author}"
@using Microsoft.IdentityModel.Tokens
@model Chirp.Web.Pages.UserTimelineModel
@inject ICheepRepository CheepRepository
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
    var routeName = HttpContext.GetRouteValue("author");
    var ownUserName = User.Identity.Name;
}

<div>
    <h2> @routeName's Timeline </h2>
    @if(User.Identity.IsAuthenticated) {
        <div class="cheepbox">
            <h3>Tell others what's on your mind @(ownUserName)!</h3>
            <form method="post">
                <input required type="text" id="input" asp-for="Message">
                <input type="submit" value="Cheep">
                <span class="word" id="word">160 characters left</span>
            </form>
        </div>
        <script>
            let word = document.getElementById("word"); // Word counter
            let input = document.getElementById("input"); // Input written in the form
            const maximumlen = 160; // Max length
            
            updatecount();
            
            input.addEventListener('input',updatecount);
            
            function updatecount() {
                const nowlen = input.value.length; // Current length
                const remaining = maximumlen - nowlen;
                word.textContent = `${remaining} characters left`
                
                if(remaining == 0) {
                    word.style.color = "red"
                }
            }
            
        </script>
    }

    @if (Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                @if (cheep.Author.UserName.IsNullOrEmpty() && !cheep.Author.FirstName.IsNullOrEmpty())
                {
                    cheep.Author.UserName = cheep.Author.FirstName;
                }
                <li>
                    <p>
                        <strong>
                            <a href="/@cheep.Author.UserName">@cheep.Author.UserName</a>
                        </strong>
                        @cheep.Text
                        <small>&mdash; @cheep.TimeStamp</small>
                    </p>
                </li>
            }
        </ul>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
</div>
