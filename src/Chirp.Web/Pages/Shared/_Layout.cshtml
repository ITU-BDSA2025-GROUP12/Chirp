@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"]</title>
    <link href="/css/style.css" rel="stylesheet" type="text/css" />
    <link rel="icon" type="image/png" href="/favicon/favicon.ico">
</head>
<body>
<div class=page>
    <h1><img src="/images/icon1.png" alt="Icon1"/>Chirp!</h1>
    <div class=navigation>
        @if (User.Identity.IsAuthenticated)
        {
            <div class="cheepbox">
                <h3>Tell others what's on your mind @(User.Identity.Name)!</h3>
                <form method="post">
                    <input type="Text"/>
                    <input type="submit" value="Cheep">
                </form>
            </div>
            <div>
                <a href="/@(User.Identity.Name)">my timeline</a> |
                <a href="/">public timeline</a> |
                <a href = "/Account/Logout">logout [@(User.Identity.Name)]</a>
            </div>
        }
        else
        {
            <div>
                <a href="/">public timeline</a> |
                <a href="/Account/Register">register</a> |
                <a href="/Account/Login">login</a>
            </div>
        }
    </div>
    <div class=body>
            @RenderBody()
    </div>
    <div class=footer>
        Chirp &mdash; An ASP.NET Application
    </div>
</div>

</body>
@await RenderSectionAsync("Scripts", required: false)
</html>

